<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:clm6Recommendation20Duration="urn:un:unece:uncefact:codelist:standard:UNECE:MeasurementUnitCommonCodeDuration:4" xmlns:ccts="urn:un:unece:uncefact:documentation:standard:CoreComponentsTechnicalSpecification:2" targetNamespace="urn:un:unece:uncefact:codelist:standard:UNECE:MeasurementUnitCommonCodeDuration:4" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.3">
<!-- ======================================================================= -->
<!-- ===== Element Declarations                                        ===== -->
<!-- ======================================================================= -->
<!-- ===== Root Element                                                ===== -->
<!-- ======================================================================= -->
  <xsd:element name="MeasurementUnitCommonCodeDuration" type="clm6Recommendation20Duration:MeasurementUnitCommonCodeDurationContentType"/>
<!-- ================================================================== -->
<!-- ===== Type Definitions                                       ===== -->
<!-- ================================================================== -->
<!-- ===== Type Definition: MeasurementUnitCommonCodeDurationContentType ===== -->
<!-- ================================================================== -->
  <xsd:simpleType name="MeasurementUnitCommonCodeDurationContentType">
    <xsd:restriction base="xsd:token">
      <xsd:enumeration value="ANN">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>year</ccts:Name>
            <ccts:Description>Unit of time equal to 365,25 days.
Synonym: Julian year</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="B98">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>microsecond</ccts:Name>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="C26">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>millisecond</ccts:Name>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="C47">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>nanosecond</ccts:Name>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="D42">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>tropical year</ccts:Name>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="DAD">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>ten day</ccts:Name>
            <ccts:Description>A unit of time defining the number of days in multiples of 10.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="DAY">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>day</ccts:Name>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="DEC">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>decade</ccts:Name>
            <ccts:Description>A unit of count defining the number of decades (decade: quantity equal to 10 or time equal to 10 years).</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="HUR">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>hour</ccts:Name>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="MIN">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>minute [unit of time]</ccts:Name>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="MON">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>month</ccts:Name>
            <ccts:Description>Unit of time equal to 1/12 of a year of 365,25 days.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="RH">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>running or operating hour</ccts:Name>
            <ccts:Description>A unit of time defining the number of hours of operation.</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="SAN">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>half year (6 months)</ccts:Name>
            <ccts:Description>'A unit of time defining the number of half years (6 months).</ccts:Description>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="SEC">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>second [unit of time]</ccts:Name>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="WEE">
        <xsd:annotation>
          <xsd:documentation xml:lang="en">
            <ccts:Name>week</ccts:Name>
          </xsd:documentation>
        </xsd:annotation>
      </xsd:enumeration>
      <xsd:minLength value="1"/>
      <xsd:maxLength value="3"/>
    </xsd:restriction>
  </xsd:simpleType>
</xsd:schema>
